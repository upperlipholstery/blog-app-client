<div class="modal-dialog modal-xl" role="document">
  <div class="modal-content">
    <div class="modal-header">
        <div class="modal-title" id="view-title"><h3>{{post.title}}<h3><h5>Written by: {{post.owner.email}} on {{post.createdAt}}</h5></div>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="view-body">
        {{post.body}}<br>
        {{#each post.comments as |comment|}}
        <div class="SingleComment border border-black">
          <div>
            {{comment.ownerName}}<br>
          </div>
          <div class="comment-body" data-id="{{comment._id}}">
            {{comment.body}}<br>
          </div>
          {{/each}}
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
    </div>
  </div>
</div>
