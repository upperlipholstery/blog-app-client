{{#each posts as |post|}}
  <section data-id="{{post.id}}" class="practice-item">
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        {{post.title}}<br>
        {{post.owner}}
        {{post.date_time}}
        {{post.body}}
        <button data-id="{{post.id}}" type="button" class="btn btn-outline-success my-2 my-sm-0 update-modal" data-toggle="modal" data-target="#updateModal">
          Edit
        </button>
        <button data-id="{{post.id}}" type="button" class="btn btn-outline-danger delete-modal" data-toggle="modal" data-target="#deleteModal">
          Delete
        </button>
      </div>
    </div>
  </section>

{{/each}}
