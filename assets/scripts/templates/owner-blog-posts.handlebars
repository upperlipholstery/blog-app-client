{{#each posts as |post|}}
  <section data-id="{{post._id}}" class="post-item">
    <div class="card" style="width: 15rem;">
      <div class="card-body">
        <h3>{{post.title}}</h3>
        <p>Wtritten by: {{post.owner.email}}</p>
        {{post.createdAt}}<br>
        <button data-id="{{post._id}}" type="button" class="btn btn-outline-primary my-2 my-sm-0 view-modal" data-toggle="modal" data-target="#viewModalLong">
          View
        </button>
        <button data-id="{{post._id}}" type="button" class="btn btn-outline-success my-2 my-sm-0 update-modal" data-toggle="modal" data-target="#editModalLong">
          Edit
        </button>
        <button data-id="{{post._id}}" type="button" class="btn btn-outline-danger delete-modal" data-toggle="modal" data-target="#deleteModal">
          Delete
        </button>
      </div>
    </div>
  </section>

{{/each}}
