<div class="modal-dialog modal-xl" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <div class="modal-title" id="view-title"><h3>{{post.title}}<h3><h5>Written by: {{post.owner.email}} on {{post.createdAt}}</h5></div>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="view-body">
        <p class="written-text">{{post.body}}</p><br>
        <div class="fancy-break"></div>
        {{#each post.comments as |comment|}}
          <div class="single-comment">
            <div>
              <h5>~ {{comment.ownerName}} ~</h5>
            </div>
            <div class="comment-body" data-id="{{comment._id}}">
              <p class="written-text">{{comment.body}}</p>
            </div>
            {{#if comment.own}}
            <div class="comment-buttons">
              <div class="main-comment-buttons">
                <button data-id="{{comment._id}}" type="button" class="btn btn-outline-success btn-sm edit-comment">
                  Edit
                </button>
                <button data-id="{{comment._id}}" type="button" class="btn btn-outline-danger btn-sm delete-comment">
                  Delete
                </button>
              </div>
              <div data-id="{{comment._id}}" class="delete-check hidden">
                <button data-id="{{comment._id}}" type="button" class="btn btn-outline-danger btn-sm my-2 my-sm-0 confirm-comment-delete">
                  Confirm
                </button>
                <button data-id="{{comment._id}}" type="button" class="btn btn-outline-secondary btn-sm my-2 my-sm-0 cancel-comment-delete">
                  Cancel
                </button>
              </div>
            </div>
          </div>
          <div class="fancy-break"></div>
          {{/if}}
          {{/each}}
          <div id="create-comment-menu" class="container col-12">
            <form id="create-comment">
              <div class="form-group">
                <textarea class="form-input form-control paper-input" name="comment[body]" placeholder="Body" rows="5"></textarea>
              </div>
              <input type="submit" value="Submit" class="btn btn-outline-dark my-2 my-sm-0">
            </form>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
    </div>
  </div>
