<div class="modal-dialog modal-xl" role="document">
  <div class="modal-content">
    <div class="modal-header">
        <div class="modal-title" id="view-title"><h3>{{post.title}}<h3><h5>Written by: {{post.owner.email}} on {{post.createdAt}}</h5></div>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="view-body">
        {{post.body}}<br>
        {{#each post.comments as |comment|}}
        <div class="SingleComment">
          <div>
            {{comment.ownerName}}<br>
          </div>
          <div class="comment-body" data-id="{{comment._id}}">
            {{comment.body}}<br>
          </div>
          {{#if comment.own}}
          <div class="comment-buttons">
            <button data-id="{{comment._id}}" type="button" class="btn btn-success edit-comment">
              Edit
            </button>
            <button data-id="{{comment._id}}" type="button" class="btn btn-danger delete-comment">
              Delete
            </button>
            <div data-id="{{comment._id}}" class="delete-check hidden">
              <button data-id="{{comment._id}}" type="button" class="btn btn-danger my-2 my-sm-0 confirm-comment-delete">
                Confirm
              </button>
              <button data-id="{{comment._id}}" type="button" class="btn btn-secondary my-2 my-sm-0 cancel-comment-delete">
                Cancel
              </button>
            </div>
          </div>
          </div>
          {{/if}}
          {{/each}}
          <div id="create-comment-menu" class="container col-12">
            <form id="create-comment">
              <div class="form-group">
                <textarea class="form-input form-control" name="comment[body]" placeholder="Body" rows="5"></textarea>
              </div>
              <input type="submit" value="Submit" class="btn btn-outline-dark my-2 my-sm-0">
            </form>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
    </div>
  </div>
</div>
