<div class="modal-dialog modal-xl" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <div class="modal-title" id="view-title"><h3>{{tome.title}}<h3><h5>Written by: {{tome.owner.email}} on {{tome.createdAt}}</h5></div>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="view-body">
        <p class="written-text">{{tome.body}}</p><br>
        {{#if tome.notOwn}}
          {{#if tome.favorite}}
          <button data-id="{{tome._id}}" type="button" class="btn btn-secondary my-2 my-sm-0 toggle-favorite">
            Remove
          </button>
          {{else}}
          <button data-id="{{tome._id}}" type="button" class="btn btn-warning my-2 my-sm-0 toggle-favorite fav-btn">
            Favorite
          </button>
          {{/if}}
        {{/if}}
        <div class="fancy-break"></div>
        {{#each tome.notes as |note|}}
          <div class="single-note">
            <div>
              <h5>~ {{note.ownerName}} ~</h5>
            </div>
            <div class="note-body" data-id="{{note._id}}">
              <p class="written-text">{{note.body}}</p>
            </div>
            {{#if note.own}}
            <div class="note-buttons">
              <div class="main-note-buttons">
                <button data-id="{{note._id}}" type="button" class="btn btn-outline-success btn-sm edit-note">
                  Edit
                </button>
                <button data-id="{{note._id}}" type="button" class="btn btn-outline-danger btn-sm delete-note">
                  Delete
                </button>
              </div>
              <div data-id="{{note._id}}" class="delete-check hidden">
                <button data-id="{{note._id}}" type="button" class="btn btn-outline-danger btn-sm my-2 my-sm-0 confirm-note-delete">
                  Confirm
                </button>
                <button data-id="{{note._id}}" type="button" class="btn btn-outline-secondary btn-sm my-2 my-sm-0 cancel-note-delete">
                  Cancel
                </button>
              </div>
            </div>
          {{/if}}
        </div>
          <div class="fancy-break"></div>
          {{/each}}
          <div id="create-note-menu" class="container col-12">
            <form id="create-note">
              <div class="form-group">
                <textarea class="form-input form-control paper-input" name="note[body]" placeholder="Body" rows="5"></textarea>
              </div>
              <input type="submit" value="Submit" class="btn btn-outline-dark my-2 my-sm-0">
            </form>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
    </div>
  </div>
